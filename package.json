{
  "version": "1.2.5",
  "private": true,
  "description": "A better customizable and git support commitizen adapter",
  "keywords": [
    "commitizen-adapter",
    "cli",
    "cz-cli",
    "cz-git",
    "cz-gitee",
    "cz-adapter",
    "customizable",
    "cz-customizable"
  ],
  "homepage": "https://cz-git.qbenben.com",
  "bugs": {
    "url": "https://github.com/Zhengqbbb/cz-git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhengqbbb/cz-git"
  },
  "license": "MIT",
  "author": "Zhengqbbb <zhengqbbb@gmail.com> (https://github.com/Zhengqbbb)",
  "scripts": {
    "build": "pnpm run -r --stream build",
    "build:dev": "pnpm run -r --stream build:dev",
    "clean": "pnpm run -r --stream clean",
    "dev": "pnpm clean && tsc -b tsconfig.build.json --watch",
    "docs:build": "vuepress build docs --clean-cache  --dest dist",
    "docs:dev": "vuepress dev docs --clean-cache",
    "docs:serve": "anywhere -h localhost -d dist",
    "lint": "eslint --ext .ts",
    "prepare": "husky install",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && pnpm run -r --stream release:changelog",
    "test": "pnpm build:dev && jest",
    "test-coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/rimraf": "^3.0.2",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vuepress/bundler-vite": "^2.0.0-beta.38",
    "@vuepress/bundler-webpack": "^2.0.0-beta.38",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.38",
    "@vuepress/plugin-git": "^2.0.0-beta.38",
    "@vuepress/plugin-google-analytics": "^2.0.0-beta.38",
    "@vuepress/plugin-pwa": "^2.0.0-beta.38",
    "@vuepress/plugin-pwa-popup": "^2.0.0-beta.38",
    "anywhere": "^1.5.0",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "cz-git": "workspace:*",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "markdown-it-mark": "^3.0.1",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.55.0",
    "ts-jest": "27.1.4",
    "tsup": "^5.12.6",
    "typescript": "^4.6.3",
    "vuepress": "^2.0.0-beta.39",
    "vuepress-plugin-china-search-console": "^2.0.0",
    "vuepress-plugin-clipboard": "^1.0.6",
    "vuepress-plugin-sitemap2": "^2.0.0-beta.47",
    "vuepress-vite": "^2.0.0-beta.39"
  },
  "engines": {
    "pnpm": ">=6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}
