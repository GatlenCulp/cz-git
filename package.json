{
  "private": true,
  "description": "A better customizable and git support commitizen adapter",
  "keywords": [
    "commitizen-adapter",
    "cli",
    "cz-cli",
    "cz-git",
    "cz-gitee",
    "cz-adapter",
    "customizable",
    "cz-customizable"
  ],
  "homepage": "https://github.com/Zhengqbbb/cz-git#readme",
  "bugs": {
    "url": "https://github.com/Zhengqbbb/cz-git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhengqbbb/cz-git"
  },
  "license": "MIT",
  "author": "Zhengqbbb <zhengqbbb@gmail.com> (https://github.com/Zhengqbbb)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "workspaces": [
    "packages/*",
    "packages/@cz-git/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean && rimraf *.tsbuildinfo && lerna run clean",
    "dev": "rimraf *.tsbuildinfo && tsc -b tsconfig.build.json --watch",
    "lint": "eslint --ext .ts",
    "prepare": "husky install",
    "release": "lerna version patch --yes --no-push",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@types/rimraf": "^3.0.2",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.54.0",
    "ts-jest": "27.1.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "commitizen": ">=2"
  }
}
