{
  "version": "1.2.9",
  "private": true,
  "description": "A better customizable and git support commitizen adapter",
  "keywords": [
    "commitizen-adapter",
    "cli",
    "cz-cli",
    "cz-git",
    "cz-gitee",
    "cz-adapter",
    "customizable",
    "cz-customizable"
  ],
  "homepage": "https://cz-git.qbenben.com",
  "bugs": {
    "url": "https://github.com/Zhengqbbb/cz-git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhengqbbb/cz-git"
  },
  "license": "MIT",
  "author": "Zhengqbbb <zhengqbbb@gmail.com> (https://github.com/Zhengqbbb)",
  "scripts": {
    "build": "pnpm run -r --stream build",
    "build:dev": "pnpm run -r --stream build:dev",
    "clean": "pnpm run -r --stream clean",
    "dev": "pnpm clean && tsc -b tsconfig.build.json --watch",
    "docs:build": "pnpm --filter=docs docs:build",
    "docs:dev": "pnpm --filter=docs docs:dev",
    "docs:serve": "pnpm --filter=docs docs:serve",
    "lint": "eslint --ext .ts",
    "prepare": "husky install",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && pnpm run -r --stream release:changelog",
    "test": "vitest",
    "test-coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@cz-git/inquirer": "workspace:*",
    "@types/inquirer": "8.2.0",
    "@types/node": "^17.0.31",
    "@types/rimraf": "^3.0.2",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "bumpp": "^7.1.1",
    "conventional-changelog-cli": "^2.2.2",
    "cz-git": "workspace:*",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "tsup": "^5.12.7",
    "typescript": "^4.6.4",
    "vitest": "^0.12.3"
  },
  "engines": {
    "pnpm": ">=6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}
