{
  "name": "cz-git",
  "version": "1.0.0",
  "description": "A better customizable and git support commitizen adapter",
  "keywords": [
    "commitizen-adapter",
    "cz-git",
    "cz-gitee",
    "customizable",
    "cz-cli"
  ],
  "homepage": "https://github.com/Zhengqbbb/git-cz#readme",
  "bugs": {
    "url": "https://github.com/Zhengqbbb/git-cz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zhengqbbb/git-cz.git"
  },
  "license": "MIT",
  "author": "Zhengqbbb (zhengqbbb@gmail.com)",
  "main": "/lib/index.js",
  "scripts": {
    "build": "rimraf *.tsbuildinfo lib && tsc -b",
    "dev": "tsc -b --watch",
    "lint": "eslint --ext .ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.54.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "commitizen": ">=2"
  }
}
