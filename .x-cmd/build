# shellcheck shell=bash disable=SC1091,SC2034,SC2154 #xsh

# Section: Arg
WORK_DIR="$(x wsroot)"

# Section: Fuction
build() {
    param:dsl       '
type:
    Type = cz all docs
options:
    --p    "select target build command"        <>:Type
'
    param:run
    build_"${p}"
}

build_all() {
    build_cz
    build_docs
}

build_cz() {
    pnpm run build
}

build_docs() {
    pnpm run docs:build
}

# Section: Main
case "${1}" in
    cz)     build_cz        ;;
    docs)   build_docs      ;;
    all)    build_all       ;;
    *)      build           ;;
esac
